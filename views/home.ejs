<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Trang chủ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">

  <h1 class="mb-4">Trang chủ</h1>

  <!-- Suppliers -->
  <h2>Nhà cung cấp</h2>
  <a href="/suppliers/create" class="btn btn-primary mb-2">+ Thêm nhà cung cấp</a>
  <table class="table table-bordered">
    <tr>
      <th>Tên</th><th>Địa chỉ</th><th>Phone</th><th>Action</th>
    </tr>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/edit/<%= s._id %>" class="btn btn-warning btn-sm">Sửa</a>
          <a href="/suppliers/delete/<%= s._id %>" class="btn btn-danger btn-sm">Xóa</a>
        </td>
      </tr>
    <% }) %>
  </table>

  <!-- Products -->
  <h2 class="mt-5">Sản phẩm</h2>
  <a href="/products/create" class="btn btn-primary mb-2">+ Thêm sản phẩm</a>
  <table class="table table-bordered">
    <tr>
      <th>Tên</th><th>Địa chỉ</th><th>Phone</th><th>Nhà cung cấp</th><th>Action</th>
    </tr>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.address %></td>
        <td><%= p.phone %></td>
        <td><%= p.supplierId ? p.supplierId.name : '' %></td>
        <td>
          <a href="/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">Sửa</a>
          <a href="/products/delete/<%= p._id %>" class="btn btn-danger btn-sm">Xóa</a>
        </td>
      </tr>
    <% }) %>
  </table>

</body>
</html>
