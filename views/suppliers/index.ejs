<!DOCTYPE html>
<html>
<head>
  <title>Suppliers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1>Suppliers</h1>
  <a href="/suppliers/create" class="btn btn-primary mb-3">Add Supplier</a>
  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/edit/<%= s._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/suppliers/delete/<%= s._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
      <a href="/" class="btn btn-secondary">Quay lại Trang chủ</a>
</body>
</html>
